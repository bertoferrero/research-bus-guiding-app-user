<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusGuiding.Views.Dev.Test2_2__RiderDemoTestPage">

    <StackLayout>
        <Entry Placeholder="Route ID" x:Name="RouteIdEntry" />
        <Entry Placeholder="Vehicle ID" x:Name="VehicleIdEntry" />
        <Entry Placeholder="Initial Stop Id" x:Name="InitialStop" />
        <Entry Placeholder="Final Stop Id" x:Name="FinalStop" />
        <Button Text="Stop reached, not stopped" x:Name="StopNotStoppedButton" Clicked="StopNotStoppedButton_Clicked"  IsVisible="False"/>
        <Button Text="Stop reached, stopped" x:Name="StopStoppedButton" Clicked="StopStoppedButton_Clicked"  IsVisible="False"/>
        <Button Text="Start test" x:Name="StartButton" Clicked="StartButton_ClickedAsync"/>

        <Label Text="" x:Name="GeneralLog"/>
    </StackLayout>

</ContentPage>
