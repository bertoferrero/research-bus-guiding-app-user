<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             xmlns:resources="clr-namespace:BusGuiding.Resources"
             x:Class="BusGuiding.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Margin="10"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="FillAndExpand" IsVisible="{Binding ShowForm}">
            <!--<Label Text="User"/>-->
            <Entry Placeholder="{x:Static resources:GeneralTexts.User}" Text="{Binding Username}"/>
            <!--<Label Text="Password" />-->
            <Entry Placeholder="{x:Static resources:GeneralTexts.Password}" IsPassword="True" Text="{Binding Password}"/>
            <Button Text="{x:Static resources:GeneralTexts.Login}" Command="{Binding LoginCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>