<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusGuiding.Views.Rider.P3_LineSelection">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Origin stop:" />
            <Label Text="{Binding StopName}" />
            <Label Text="Please, select the line you want to get on."/>
            
            <ListView VerticalOptions="FillAndExpand" ItemsSource="{Binding Routes}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>