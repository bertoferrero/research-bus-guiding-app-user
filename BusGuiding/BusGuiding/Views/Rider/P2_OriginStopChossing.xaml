<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusGuiding.Views.Rider.P2_OriginStopChossing"
             xmlns:resources="clr-namespace:BusGuiding.Resources"
             Title="{x:Static resources:RiderTexts.P2_Title}"
             >
    <ContentPage.Content>
        <StackLayout Margin="10"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="FillAndExpand">
            <Label Text="{x:Static resources:RiderTexts.P2_EnterOriginStopLabel}"/>
            <StackLayout Orientation="Horizontal">
                <Entry HorizontalOptions="FillAndExpand" Text="{Binding StopCodeId}"/>
                <Button Text="{x:Static resources:GeneralTexts.OK}" Command="{Binding ReadFromStopCodeFieldCommand}"/>
            </StackLayout>
            <Button Text="{x:Static resources:GeneralTexts.Geolocalise}" Command="{Binding GeolocaliseCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>