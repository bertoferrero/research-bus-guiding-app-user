<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusGuiding.Views.Rider.P4_DestinationStopChoosing"
             xmlns:resources="clr-namespace:BusGuiding.Resources"
             Title="{x:Static resources:RiderTexts.P4_Title}">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="{x:Static resources:RiderTexts.SummaryOriginStop}" />
            <Label Text="{Binding StopName}" />
            <Label Text="{x:Static resources:RiderTexts.SummaryLine}" />
            <Label Text="{Binding RouteName}" />
            <Label Text="{x:Static resources:RiderTexts.P4_SelectDestinationStop}"/>

            <ListView VerticalOptions="FillAndExpand" ItemsSource="{Binding Stops}" SelectedItem="{Binding SelectedStop}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>